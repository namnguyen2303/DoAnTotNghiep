<body class="bg-login" style="overflow:hidden;">
    <div class="row justify-content-center">
        <div class="col-md-4 mt-5 p-5" style="border: 1px solid #fd693c;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <img src="~/Content/images/sloganTD.png" width="100%" height="auto" />
                    </div>
                </div>
                <div class="txtLogin row mt-5" id="txtLogin" style="position:relative;">
                    <input type="text" class="form-control col-md-10 pl-4 inputLogin" placeholder="Tên đăng nhập" id="txtUsernameLogin" name="">
                    <i style="position:absolute; top:10px; left:40px;" class="iconUsernameLogin fa fa-user"></i>
                </div>
                <div class="txtLogin row mt-1" id="txtLogin" style="position:relative;">
                    <input type="password" class="form-control col-md-10 pl-4 inputLogin" placeholder="Mật khẩu" id="txtPasswordLogin" name="">
                    <i style="position:absolute; top:10px; left:40px;" class="iconPasswordLogin fa fa-lock"></i>
                </div>
                <div class="row justify-content-center">
                    <button class="btn btn-primary mt-3" id="btnLogin" onclick="Login()">Đăng nhập</button>
                </div>
            </div>
        </div>
    </div>
