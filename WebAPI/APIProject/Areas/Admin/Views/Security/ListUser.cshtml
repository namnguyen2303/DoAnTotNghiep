@using Data.DB;
@using PagedList.Mvc;
@model PagedList.IPagedList<customer>

@{
    ViewBag.Title = "ListUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var roles = ViewBag.Roles as IEnumerable<role>;
}

<div class="col-md-12">
    <div class="breadcrumb-holder">
        <div class="row mb-3 mt-3">
            <div class="col-md-10 col-sm-9 text-dark px-0 mt-3">
                <h4><i class="fa fa-user-secret" aria-hidden="true"></i> Quản lý tài khoản</h4>
            </div>

        </div>
    </div>
</div>
<div class="row mb-4 mt-4">
    <div class="col-md-12 text-right">
        <a class="btn btn-search btn-success" href="@Url.Action("Register")">
            <i class="fa fa-fw fa-plus"></i> Thêm mới
        </a>
    </div>
</div>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Loại Thành viên</th>
            <th>Danh Sách quyền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name_customer</td>
                <td>@item.phone</td>
                <td>@item.email</td>
                <td>@item.CustomerType.name</td>
                <td>
                    @foreach (var r in item.userRoles)
                    {
                        <span>
                            @r.role.name
                        </span>
                        <br />
                    }
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>

</table>




