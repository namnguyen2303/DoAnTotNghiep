@using Data.Model
@using Data.Utils
@using PagedList.Mvc
@model  PagedList.IPagedList<ListCustomerOutputModel>
<table class="table table-striped table-bordered table-hover table-responsive-sm table-responsive-md">
    <thead class="text-center text-dark bg-thead">
        <tr>
            <th>STT</th>
            <th>Tên người dùng</th>
            <th>Số điện thoại</th>
            <th>Ngày tạo</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody class="text-center">

        @{
            if (Model.Count() <= 0)
            {
                <tr>
                    <td colspan="5">Không có dữ liệu.</td>
                </tr>
            }
            else
            {

                int stt = ((Model.PageNumber - 1) * Model.PageSize) + 1;
                foreach (var data in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@data.Name</td>
                        <td>@data.PhoneNumber </td>
                        <td>@data.CreateDateStr</td>
                        <td>
                            <a data-toggle="tooltip" data-placement="top" title="Reset mật khẩu" class="cursor-pointer mr-2" onclick="refreshUser(@data.ID)">
                                <i class="btnRefresh fa fa-fw fa-refresh"></i>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Sửa tài khoản." class="cursor-pointer mr-2" onclick="editUser(@data.ID)">
                                <i class="btnEdit text-success fa fa-fw fa-edit"></i>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Xóa tài khoản." class="cursor-pointer" onclick="deleteUser(@data.ID)">
                                <i class="btnDelete text-danger fa fa-fw fa-trash-o"></i>
                            </a>
                        </td>

                    </tr>
                    stt++;

                }
            }
        }

    </tbody>
</table>
<div class="col-md-12">
    <div class="row float-right">
        @Html.PagedListPager(Model, Page => Url.Action("Search", new { Page = Page, Phone = ViewBag.Phone, FromDate = ViewBag.FromDate, ToDate = ViewBag.ToDate }),
     PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
     {
         HttpMethod = "GET",
         UpdateTargetId = "tableUser"
     })
     )
    </div>
</div>
