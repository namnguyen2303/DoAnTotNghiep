@using APIProject.Areas.Admin.Models;
@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="aa-myaccount">
    <div class="container">
        <div class="aa-myaccount-area">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="aa-myaccount-login">
                        <h4 class="">Đăng ký</h4>
                        @using (Html.BeginForm("Register", "Account",
                        FormMethod.Post, new { @class = "aa-login-form" }))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            
                            <label for="">Email<span>*</span></label>
                            <input type="text" class="inputLogin" placeholder="Email" name="email">

                            <label for="">Họ tên<span>*</span></label>
                            <input type="text" class="inputLogin" placeholder="Họ tên" name="name_customer">

                            <label for="">Số điện thoại<span>*</span></label>
                            <input type="text" class="inputLogin" placeholder="Số điện thoại" name="phone">

                            <label for="">Mật khẩu<span>*</span></label>
                            <input type="password" class="inputLogin" placeholder="Mật khẩu" name="pass">

                            <label for="">Xác nhận mật khẩu<span>*</span></label>
                            <input type="password" class="inputLogin" placeholder="Xác nhận mật khẩu" name="confimPass">
                            
                            <button class="aa-browse-btn mt-3" id="btnLogin" type="submit">Đăng ký</button>
                            <label class="rememberme" for="rememberme">
                                Bạn đã có tài khoản?
                                <a href="/Account/Login" style="color:#337ab7">Đăng nhập</a>
                            </label>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


