@using APIProject.Areas.Admin.Models;
@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title class="title-tab">TranDungShop</title>
    @*<link rel="icon" href="~/Content/images/store_1539333059_242.png" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    @Styles.Render("~/dekko/css")
    @Scripts.Render("~/layout/js")
    @Scripts.Render("~/dekko/js")
    @Scripts.Render("~/bundle/js")
</head>
<body class="bg-login" style="overflow:hidden;">
    <div class="row justify-content-center">
        <div class="col-md-4 mt-5 p-5" style="border: 1px solid #fd693c;">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <img src="~/Content/images/sloganTD.png" width="100%" height="auto" />
                        </div>
                    </div>
                    <div class="txtLogin row mt-5" id="txtLogin" style="position:relative;">
                        <input type="text" class="form-control col-md-10 pl-4 inputLogin" placeholder="Email" id="txtUsernameLogin" name="email">
                        <i style="position:absolute; top:10px; left:40px;" class="iconUsernameLogin fa fa-envelope"></i>
                    </div>

                    <div class="txtLogin row mt-1" id="txtLogin" style="position:relative;">
                        <input type="text" class="form-control col-md-10 pl-4 inputLogin" placeholder="Họ tên" id="txtUsernameLogin" name="name_customer">
                        <i style="position:absolute; top:10px; left:40px;" class="iconUsernameLogin fa fa-user"></i>
                    </div>
                    <div class="txtLogin row mt-1" id="txtLogin" style="position:relative;">
                        <input type="text" class="form-control col-md-10 pl-4 inputLogin" placeholder="Số điện thoại" id="txtUsernameLogin" name="phone">
                        <i style="position:absolute; top:10px; left:40px;" class="iconUsernameLogin fa fa-phone"></i>
                    </div>

                    <div class="txtLogin row mt-1" id="txtLogin" style="position:relative;">
                        <input type="password" class="form-control col-md-10 pl-4 inputLogin" placeholder="Mật khẩu" id="txtPasswordLogin" name="pass">
                        <i style="position:absolute; top:10px; left:40px;" class="iconPasswordLogin fa fa-lock"></i>
                    </div>
                    <div class="txtLogin row mt-1" id="txtLogin" style="position:relative;">
                        <input type="password" class="form-control col-md-10 pl-4 inputLogin" placeholder="Xác nhận mật khẩu" id="txtPasswordLogin" name="confimPass">
                        <i style="position:absolute; top:10px; left:40px;" class="iconPasswordLogin fa fa-lock"></i>
                    </div>
                    <div class="row justify-content-center">
                        <button class="btn btn-primary mt-3" id="btnLogin" type="submit">Đăng ký</button>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
