@using APIProject.Areas.Admin.Models;
@model LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="aa-myaccount">
    <div class="container">
        <div class="aa-myaccount-area">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="aa-myaccount-login">
                        <h4 class="">Đăng nhập</h4>
                        @using (Html.BeginForm("Login", "Account",
                        FormMethod.Post, new { @class = "aa-login-form" }))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <label for="">Email<span>*</span></label>
                            <input type="text" class="inputLogin" name="email" placeholder="Email">
                            <label for="">Mật khẩu<span>*</span></label>
                            <input type="password" class="inputLogin" name="pass" placeholder="Mật khẩu">
                            <button type="submit" id="btnLogin" class="aa-browse-btn">Đăng nhập</button>
                            <label class="rememberme" for="rememberme">Bạn đã có tài khoản? <a href="/Account/Register" style="color:#337ab7">Đăng ký</a> </label>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

